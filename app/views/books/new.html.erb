

<div id="books-page" class="form-outline mt-4">
   <%= form_with model: @book, url: books_path do |form| %>
    <div class="">
      <%= form.text_field :search, class: "search-box form-control m-3", placeholder:"Search books", href: "#", id: "search-bar", role: "button", "data-bs-toggle": "dropdown", "aria-expanded": "false", autocomplete: "off" %>
       <ul id="search-list", class="book-list-container gap-3" aria-labelledby="search"></ul>
        </div>
          <div class="field">
            <%= form.label :title, style: "display: block" %>
            <%= form.text_field :title %>
          </div>

          <div class="field">
            <%= form.label :author_name , style: "display: block" %>
            <%= form.text_field :author_name %>
          </div>

          <div class="field">
            <%= form.label :first_publish_year , style: "display: block" %>
            <%= form.number_field :first_publish_year %>
          </div>

          <div>
            <%= form.submit %>
          </div>
        </div>
    <% end %>


